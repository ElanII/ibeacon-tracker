{
  "name": "ibeacon-tracker",
  "version": "1.0.0",
  "description": "Service for tracking iBeacons",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run clean && npm run build:server && npm run build:client",
    "build:server": "npm run lint:server && babel server --out-dir dist",
    "build:client": "npm run build:client:js && npm run build:client:css && npm run build:client:html",
    "build:client:js": "npm run lint:client && mkdir -p dist/public/content/js/ && browserify client/content/js/boot.js > dist/public/content/js/app.js",
    "build:client:css": "lessc --clean-css='--s1 --advanced --compatibility=ie8' client/content/css/app.less dist/public/content/css/app.css",
    "build:client:html": "cp client/index.html dist/public/index.html",
    "clean": "rimraf dist",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "eslint server --config ./.eslintrc",
    "lint:client": "eslint client --config ./.eslintrc",
    "watch:client:js": "watchify -v --debug client/content/js/boot.js -o dist/public/content/js/app.js",
    "watch:client:css": "watch 'npm run build:client:css' client/content/css",
    "watch:client": "npm run watch:client:js && npm run watch:client:css",
    "watch:server": "nodemon --watch server --ext js --exec 'npm run build:server && node dist/server'",
    "watch": "npm run watch:server & npm run watch:client",
    "debug": "NOBLE_REPORT_ALL_HCI_EVENTS=1 node-debug --web-port=8089 dist/server.js",
    "start:dev": "npm run build:client && NODE_ENV=development NOBLE_REPORT_ALL_HCI_EVENTS=1 npm run watch",
    "start": "forever dist/server.js --minUptime 5000 --spinSleepTime 2000"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bleacon": "~0.2.3",
    "body-parser": "^1.12.4",
    "cookie-parser": "^1.3.5",
    "express": "^4.12.3",
    "express-session": "^1.11.2",
    "mongod": "~1.3.0",
    "mongoose": "^4.0.3",
    "morgan": "^1.5.3",
    "passport": "^0.2.2",
    "passport-local": "^1.0.0",
    "symbol": "~0.2.1",
    "passport-local-mongoose": "~1.0.0",
    "bunyan-middleware": "~0.2.0",
    "bunyan": "~1.3.5",
    "superagent": "~1.2.0",
    "immutable": "~3.7.3",
    "bootstrap": "~3.3.4",
    "react": "~0.13.3",
    "react-router": "~0.13.3",
    "bunyan-prettystream": "~0.1.3",
    "alt": "~0.16.7",
    "lodash": "~3.9.3",
    "bluebird": "~2.9.27",
    "humane-js": "~3.2.2",
    "classnames": "~2.1.2",
    "reactlink-immutable": "~0.1.4"
  },
  "devDependencies": {
    "babel": "^5.4.2",
    "babel-eslint": "~3.1.9",
    "eslint": "~0.21.2",
    "rimraf": "^2.3.3",
    "browserify": "~10.2.3",
    "less": "~2.5.1",
    "less-plugin-clean-css": "~1.5.0",
    "cp": "~0.2.0",
    "babelify": "~6.1.2",
    "eslint-plugin-react": "~2.4.0",
    "watchify": "~3.2.1",
    "nodemon": "~1.3.7",
    "watch": "~0.16.0"
  }
}
