{
  "name": "ibeacon-tracker",
  "version": "0.4.0",
  "description": "Service for tracking iBeacons",
  "main": "dist/server.js",
  "scripts": {
    "build:production:pack": "slc build --install --scripts --bundle --pack",
    "build:production:commit": "slc build --install --scripts --bundle --commit",
    "build": "npm run clean && npm run build:server && npm run build:shared && npm run build:client",
    "build:shared": "npm run lint:shared && babel src/shared --out-dir dist/shared",
    "build:server": "npm run lint:server && babel src/server --out-dir dist",
    "build:client": "npm run build:client:js && npm run build:client:css && npm run build:client:fonts && npm run build:client:html",
    "build:client:js": "npm run lint:client && mkdir -p dist/public/content/js/ && browserify src/client/content/js/boot.js > dist/public/content/js/app.js",
    "build:client:css": "lessc --clean-css='--s1 --advanced --compatibility=ie8' src/client/content/css/app.less dist/public/content/css/app.css",
    "build:client:fonts": "mkdir -p dist/public/content/fonts/ && cp -v node_modules/bootstrap/fonts/* dist/public/content/fonts",
    "build:client:html": "cp src/client/index.html dist/public/index.html",
    "clean": "rimraf dist",
    "lint": "npm run lint:shared && npm run lint:server && npm run lint:client",
    "lint:shared": "eslint src/shared --config ./.eslintrc",
    "lint:server": "eslint src/server --config ./.eslintrc",
    "lint:client": "eslint src/client --config ./.eslintrc",
    "watch:client:js": "watchify -v --debug src/client/content/js/boot.js -o dist/public/content/js/app.js",
    "watch:client:css": "watch 'npm run build:client:css' src/client/content/css",
    "watch:client": "npm run watch:client:js && npm run watch:client:css",
    "watch:server": "nodemon --watch src/shared --watch src/server --ext js --exec 'npm run build:shared && npm run build:server && node dist/server'",
    "watch": "npm run watch:server & npm run watch:client",
    "debug": "NOBLE_REPORT_ALL_HCI_EVENTS=1 node-debug --web-port=8089 dist/server.js",
    "dev": "npm run clean && npm run build:client && NODE_ENV=development NOBLE_REPORT_ALL_HCI_EVENTS=1 npm run watch"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "alt": "^0.17.1",
    "bleacon": "~0.2.3",
    "bluebird": "^2.9.32",
    "body-parser": "^1.13.2",
    "bootstrap": "^3.3.5",
    "bootstrap-toggle": "^2.0.0",
    "bunyan": "~1.3.5",
    "bunyan-prettystream": "~0.1.3",
    "classnames": "^2.1.3",
    "cookie-parser": "^1.3.5",
    "express": "^4.13.1",
    "express-session": "^1.11.2",
    "humane-js": "~3.2.2",
    "immutable": "^3.7.4",
    "lodash": "~3.9.3",
    "moment": "^2.10.3",
    "mongod": "~1.3.0",
    "mongoose": "^4.0.6",
    "passport": "^0.2.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^1.0.1",
    "piperline": "^0.2.1",
    "react": "~0.13.3",
    "react-bootstrap": "^0.23.7",
    "react-router": "~0.13.3",
    "reactlink-immutable": "~0.1.4",
    "superagent": "~1.2.0",
    "symbol": "~0.2.1"
  },
  "devDependencies": {
    "babel": "^5.4.2",
    "babel-eslint": "~3.1.9",
    "eslint": "~0.21.2",
    "rimraf": "^2.3.3",
    "browserify": "~10.2.3",
    "less": "~2.5.1",
    "less-plugin-clean-css": "~1.5.0",
    "cp": "~0.2.0",
    "babelify": "~6.1.2",
    "eslint-plugin-react": "~2.4.0",
    "watchify": "~3.2.2",
    "watch": "~0.16.0"
  },
  "bundleDependencies": [
    "alt",
    "bleacon",
    "bluebird",
    "body-parser",
    "bootstrap",
    "bunyan",
    "bunyan-prettystream",
    "classnames",
    "cookie-parser",
    "express",
    "express-session",
    "humane-js",
    "immutable",
    "lodash",
    "mongod",
    "mongoose",
    "passport",
    "passport-local",
    "passport-local-mongoose",
    "piperline",
    "react",
    "react-bootstrap",
    "react-router",
    "reactlink-immutable",
    "superagent",
    "symbol"
  ]
}
